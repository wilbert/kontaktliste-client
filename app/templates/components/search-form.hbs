<form class="search-form" {{action "search" on="submit"}} method="get">

  <div class="row">
    <div class="col s6">
      {{input type="text" value="" placeholder="Name, address, email"}}
    </div>
    <div class="col s4">
      <select class="sort" name="sort-term">
        <option value="name">Name</option>
        <option value="nationality">Nationality</option>
      </select>
    </div>
    <div class="col s2">
        <button type="submit" class="btn">Search</button>
    </div>
  </div>
  {{yield}}
</form>
